<% if notice %><p id="notice"><%= notice %></p><% end %>

<h1><%= t('.carts') %></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <p>
      <%= render 'my/currentcart' %>
    </p>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= t('.cart') %> <%= cart.id %></td>
        <td><%= link_to t('.show'), cart, method: :get %></td>
        <td><%= link_to t('.edit'), edit_cart_path(cart) %></td>
        <td><%= link_to 'D', cart, method: :delete, data: { confirm: 'Sure?' } %></td>
        <td><%= link_to t('.destroy'), destroy_new_carts_path(:cart_id => cart), method: :delete, data: { confirm: 'Sure?' } %></td>
      </tr>
    <% end %>
    <tr><p>
      <td><%= link_to t('.new'), new_cart_path %></td>
    </p></tr>
  </tbody>
</table>