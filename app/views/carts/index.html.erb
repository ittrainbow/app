<h1>Carts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td>Cart #<%= session[:cart_id] %></td>
        <td>is current</td>
      </tr>
    <% @carts.each do |cart| %>

      <tr>
        <td>Cart #<%= cart.id %></td>
        <td><%= link_to 'Show', cart, method: :get %></td>
        <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
        <td><%= link_to 'Destroy', destroy_new_carts_path(:cart_id => cart), method: :delete, data: { confirm: 'Sure?' } %></td>
      </tr>
    <% end %>
    <tr>
      <td><%= link_to 'New Cart', new_cart_path %></td>
    </tr>
  </tbody>
</table>