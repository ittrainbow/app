<!DOCTYPE html>
<html>
  <head>
    <title>Project 1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
    <header class="main">
      <%= image_tag 'ruby0.png', alt: 'Project 1' %>
      <h1><%= @page_title %></h1>
    </header>

    <section class="content">

      <nav class="side_nav">
        <ul>
          <li><%= link_to 'Home', store_index_url %></li>
          <li><%= link_to 'Products', products_url %></li>
          <li><%= link_to 'Carts', carts_url %></li>
          <li><%= link_to 'Line Items', line_items_url %></li>
          <li><%= @time %></li>
          <li><%= @show_msg1 %><%= @show_msg2 %></li>
        </ul>
        
        <br>

        <% if @cart %>
          <div id="cart" class="carts">
            <%= render @cart %>
          </div>
        <% end %>

      </nav>

      <main class='<%= controller.controller_name %>'>
        <%= yield %>
      </main>

    </section>
  </body>
</html>