<h3><%= t('.whobought') %> <%= @product.title %></h3>
 

<% for order in @product.orders %>
    <table>
        <p>
            <tr>
                <%= link_to order do %><%= t('.order') %><%= order.id %> <% end %>
            </tr>
        </p>
        <p>
            <tr>
                <td><%= t('.name') %></td>
                <td><%= order.name %></td>
            </tr>
            <tr>
                <td><%= t('.email') %></td>
                <td><%= order.email %><td><br>
            </tr>
                <td><%= t('.address') %></td>
                <td><%= order.address %><td><br>
            <tr>
                <td><%= t('.paytype') %></td>
                <td><%= order.pay_type %><td><br>
            </tr>
            <tr>
                <td><%= t('.date') %></td>
                <td><%= order.created_at %><td><br>
            </tr>
        </p>
    </table>
<% end %>
